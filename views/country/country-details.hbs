<h1>Country details</h1>



<div class="mb-3">
  <p>Name : {{data.name}}</p>
  <p>Native name : {{data.nativeName}}</p>
  <p>Capital : {{data.capital}}</p>
  <p>Calling Code : {{data.callingCodes}}</p>
  <p>Continent : {{data.region}}</p>
  <p>Subregion : {{data.subregion}}</p>
  <p>Population : {{data.population}}</p>
  <p>Population name : {{data.demonym}}</p>
  <p>Timezone : {{#each data}}{{this.timezones}}{{/each}}</p>
  <p>Borders : {{#each data}}{{this.borders}}{{/each}}</p>
  <p>Currencies : {{#each data}}{{#each this.currencies}}<p>{{this.name}}</p><p>{{this.symbol}}</p>{{/each}}{{/each}}</p>
  <p>Languages :{{#each data}}{{#each this.languages}} <p>{{this.name}}</p>{{/each}} {{/each}}</p>
</div>



<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner  carousel_size">
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <div class="carousel-item active">
      <img class="d-block w-100" src="{{data.flag}}" alt="{{data.name}} flag">
    </div>
    {{#each images}}
    <div class="carousel-item">
      <img class="d-block w-100" src={{this.urls.regular}} alt="{{this.alt_description}}">
    </div>
    {{/each}}
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

<div class="mb-3">
  <label for="exampleFormControlTextarea1" class="form-label">Add your notes</label>
  <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
</div>

<div>
  <a href="/country/{{data._id}}/countryWishList"><button type="submit" class="btn btn-primary button-travel"
      name="countryWishList" id="countryWishList">Add to my wishlist</button></a>

</div>
<div>
  <a href="/country/{{data._id}}/countryVisitor"><button type="submit" class="btn btn-primary button-travel"
      name="countryVisitor" id="countryVisitor">Add to my visited list</button></a>

</div>

