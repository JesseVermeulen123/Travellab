<div id="catchPhrase">
  <h1>Sign up to our website</h1>
</div>


<form action="/signup" method="POST">
  <div class="mb-3">
    <label id="marginText">Username*</label>
    <input name="username" type="text" placeholder="Enter your username" class="form-control">
  </div>
  <div class="mb-3">
    <label id="marginText">Password*</label>
    <input name="password" type="password" placeholder="Enter your Password" class="form-control">
  </div>
  <div class="mb-3">
    <label class="form-label" id="marginText">Email*</label>
    <input name="email" type="text" placeholder="Enter your email" class="form-control">
  </div>
  <div class="mb-3">
    <label class="form-label" id="marginText">Age</label>
    <input name="age" type="text" placeholder="Enter your age" class="form-control">
  </div>
  <div class="mb-3">
    <label class="form-label" id="marginText">Favorite country</label>
    <input name="favoriteCountry" type="text" placeholder="Enter the name of your favorite country"
      class="form-control">
  </div>
  <div class="mb-3">
    <label class="form-label" id="marginText">Favorite way of traveling</label>
    <select name="way of traveling" id="travel-select" class="form-select">
      <option value="">--Please choose an option--</option>
      <option value="train">Train</option>
      <option value="plane">Airplane</option>
      <option value="boat">Boat</option>
      <option value="bycicle">Bycicle</option>
      <option value="walk">Walk</option>
      <option value="other">Other</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary button-travel darkmode-ignore container-fluid">Sign Up</button>
</form>

{{#if msg}}
<div class="error">{{msg}}</div>
{{/if}}